{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "public_html",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
